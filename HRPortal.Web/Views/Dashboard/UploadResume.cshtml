    <link href="~/assets/css/style.css" rel="stylesheet">
}
<div class="dashboard-body">
    <div class="dashboard-caption">

        <div class="dashboard-caption-header">
            <h4><i class="ti-briefcase"></i>Candidate Resume</h4>
