@model HRPortal.Web.Models.ApplicationVM
@using Microsoft.AspNetCore.Http;
@{
    ViewData["Title"] = "ViewApplication";
    Layout = "~/Views/Shared/_HRLayout.cshtml";
    @*<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet">*@

    <link href="~/sweetalert2.css" rel="stylesheet" />
}

<div class="container content-overlay mt-5 mb-md-4 py-5">
    <!-- Breadcrumb-->
    <nav class="mb-3 mb-md-4 pt-md-3" aria-label="Breadcrumb">
        <ol class="breadcrumb breadcrumb-light">
            <li class="breadcrumb-item"><a href="@Url.Action("Index","Home")">Home</a></li>
            <li class="breadcrumb-item"><a href="#">Account</a></li>
            <li class="breadcrumb-item active" aria-current="page">Saved jobs</li>
        </ol>
    </nav>
    <!-- Page card like wrapper-->
    <div class="bg-light shadow-sm rounded-3 p-4 p-md-5 mb-2">
        <!-- Account header-->
        <div class="d-flex align-items-start justify-content-between pb-4 mb-2">
            <div class="d-flex align-items-start">
                <div class="position-relative flex-shrink-0">
                    <img class="rounded-circle" src="~/img/avatars/37.png" width="100" alt="Annette Black">
                    <button class="btn btn-icon btn-light btn-xs rounded-circle shadow-sm position-absolute end-0 bottom-0" type="button" data-bs-toggle="tooltip" title="Change image"><i class="fi-pencil fs-xs"></i></button>
                </div>
                <div class="ps-3 ps-sm-4">
                    <h3 class="h5">
                        Welcome @Context.Session.GetString("FirstName") !!!
                    </h3>
                    <ul class="list-unstyled fs-sm mb-0">
                        <li class="d-flex text-nav text-break"><i class="fi-mail opacity-60 mt-1 me-2"></i><span>@User.Identity.Name</span></li>

                    </ul>
                </div>
            </div>
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
                <button type="submit" class="nav-link btn btn-link text-dark nav-link p-0 d-none d-md-block"><i class="fi-logout mt-n1 me-2"></i> Click here to Logout</button>
            </form>
        </div>
        <!-- Account menu--><a class="btn btn-outline-primary btn-lg rounded-pill w-100 d-md-none" href="#account-nav" data-bs-toggle="collapse"><i class="fi-align-justify me-2"></i>Account Menu</a>
                            <div class="collapse d-md-block" id="account-nav">
                                <partial name="_nav" />
                            </div>
        <!-- Page title-->
        <div class="d-flex align-items-center justify-content-between py-4 mt-3 mb-2">
            <h1 class="h3 mb-0">Jobs</h1><a class="fw-bold text-decoration-none" href="#"><i class="fi-x fs-xs me-2"></i><span class="align-middle">Clear all</span></a>
        </div>

        <div class="border rounded-3 p-3 mb-2" id="personal-info">
            <!-- Name-->
            <div class="border-bottom pb-3 mb-3">
                <div class="d-flex align-items-center justify-content-between">
                    <div class="pe-2">
                        <label class="form-label fw-bold">Full name</label>
                        <div id="name-value">@Model.User.FirstName @Model.User.LastName</div>
                    </div>
                    <div class="me-n3" data-bs-toggle="tooltip" title="Edit"><a class="nav-link py-0" href="#name-collapse" data-bs-toggle="collapse"><i class="fi-edit"></i></a></div>
                </div>
             
            </div>

            <!-- Date of birth-->
            <div class="border-bottom pb-3 mb-3">
                <div class="d-flex align-items-center justify-content-between">
                    <div class="pe-2">
                        <label class="form-label fw-bold">Objective</label>
                        <div id="birth-value">@Html.Raw(Model.Application.Objective)</div>
                    </div>
                    <div class="me-n3" data-bs-toggle="tooltip" title="Edit"><a class="nav-link py-0" href="#birth-collapse" data-bs-toggle="collapse"><i class="fi-edit"></i></a></div>
                </div>
             
            </div>
            <!-- Email-->
            <div class="border-bottom pb-3 mb-3">
                <div class="d-flex align-items-center justify-content-between">
                    <div class="pe-2">
                        <label class="form-label fw-bold">Project Experience</label>
                        <div id="email-value">
                            @Html.Raw(Model.Application.Projectexperience)
                        </div>

                    </div>

                    <div class="me-n3" data-bs-toggle="tooltip" title="Edit"><a class="nav-link py-0" href="#email-collapse" data-bs-toggle="collapse"><i class="fi-edit"></i></a></div>
                </div>
              
            </div>
            <!-- Phone number-->
            <div class="border-bottom pb-3 mb-3">
                <div class="d-flex align-items-center justify-content-between">
                    <div class="pe-2">
                        <label class="form-label fw-bold">Skill</label>
                        <div id="phone-value">
                            @Html.Raw(Model.Application.Skill)
                        </div>
                    </div>
                    <div class="me-n3" data-bs-toggle="tooltip" title="Edit">
                        <a class="nav-link py-0" href="#phone-collapse" data-bs-toggle="collapse"><i class="fi-edit"></i></a>
                    </div>
                </div>
              
            </div>
            <!-- Address-->
            <div class="border-bottom pb-3 mb-3">
                <div class="d-flex align-items-center justify-content-between">
                    <div class="pe-2">
                        <label class="form-label fw-bold">Education</label>
                        <div id="address-value">
                            @Html.Raw(Model.Application.Education)
                        </div>
                    </div>
                    <div class="me-n3" data-bs-toggle="tooltip" title="Edit">
                        <a class="nav-link py-0" href="#address-collapse" data-bs-toggle="collapse"><i class="fi-edit"></i></a>
                    </div>
                </div>
               
            </div>
            <!-- Password-->
            <div>
                <div class="d-flex align-items-center justify-content-between">
                    <div class="pe-2">
                        <label class="form-label fw-bold">Experience Summary</label>
                        <div>@Html.Raw(Model.Application.Experiencesummary)</div>
                    </div>
                    <div class="me-n3" data-bs-toggle="tooltip" title="Edit"><a class="nav-link py-0" href="#company-collapse" data-bs-toggle="collapse"><i class="fi-edit"></i></a></div>
                </div>
               
            </div>

        </div>
        <div class="d-flex align-items-center justify-content-between mt-4">
            <form asp-controller="HRDashboard" asp-action="ViewCV" method="post">
                <input type="hidden" value="@Model.Application.VacancyId" name="VacancyId" id="VacancyId" />

                <input type="hidden" value="@Model.Application.UserId" name="UserId" id="UserId" />

                <button class="btn btn-primary rounded-pill px-3 px-sm-4" type="submit"><i class="fi-eye-on me-2"></i>Preview CV Online</button>
            </form>

            <form asp-controller="HRDashboard" asp-action="DownloadCV" method="post">
                <input type="hidden" value="@Model.Application.VacancyId" name="VacancyId" id="VacancyId" />

                <input type="hidden" value="@Model.Application.UserId" name="UserId" id="UserId" />

                <button class="btn btn-danger rounded-pill px-3 px-sm-4" type="submit"><i class="fi-download me-2"></i>Download CV</button>
            </form>



            <a href="#myModal" data-bs-toggle="modal" class="btn btn-success rounded-pill px-3 px-sm-4" type="button"><i class="fi-mail me-2"></i>Notification</a>
        </div>
    </div>
</div>


<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"></script>

<div class="m-4">
    <div id="myModal" class="modal fade" tabindex="-1">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Email Notification</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <form asp-action="Notification" asp-controller="HRDashboard" method="post">
                    <div class="modal-body">
                        <p style="text-align:center;">Send Email notification to the applicant</p>


                        <div class="row">
                            <div class="col-12">
                                <div class="mb-8">
                                    <label class="form-label">Message</label>
                                    <textarea class="form-control" rows="10" name="message" id="message"></textarea>
                                </div>
                            </div>
                        </div>
                        <input type="hidden" value="@Model.Application.UserId" name="userId" id="userId" />
                        <input type="hidden" value="@Model.Application.VacancyId" name="appicationId" id="appicationId" />

                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-primary">Save changes</button>
                    </div>

                </form>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.ckeditor.com/4.12.1/standard/ckeditor.js"></script>
<script>
    CKEDITOR.replace('message');
</script>


<script src="~/sweetalert2.min.js"></script>

@if (TempData["success"] != null)
{
    <script type="text/javascript">
        Swal({
            type: 'success',
            title: 'Email notification',
            html: 'Your email has been sent to the applicant.'

        })
    </script>
}
else if (TempData["error"] != null)
{
    <script type="text/javascript">
            Swal({
                type: 'error',
                title: 'Login',
                html: '@TempData["error"]'

            })
    </script>
}