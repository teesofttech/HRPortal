@model HRPortal.Domain.Entities.TblVacancyAdvert
@using Microsoft.AspNetCore.Http;
@{
    ViewData["Title"] = "Post Job";
    Layout = "~/Views/Shared/_HRLayout.cshtml";
    @*<link rel="stylesheet" href="~/assets/plugins/css/plugins.css">
        <link href="~/assets/css/style.css" rel="stylesheet">*@
    <link href="~/sweetalert2.css" rel="stylesheet" />
}

<div class="container content-overlay mt-5 mb-md-4 py-5">
    <!-- Breadcrumb-->
    <nav class="mb-3 mb-md-4 pt-md-3" aria-label="Breadcrumb">
        <ol class="breadcrumb breadcrumb-light">
            <li class="breadcrumb-item"><a href="@Url.Action("Index","Home")">Home</a></li>
            <li class="breadcrumb-item"><a href="#">Account</a></li>
            <li class="breadcrumb-item active" aria-current="page">Profile settings</li>
        </ol>
    </nav>
    <!-- Page card like wrapper-->
    <div class="bg-light shadow-sm rounded-3 p-4 p-md-5 mb-2">
        <!-- Account header-->
        <div class="d-flex align-items-start justify-content-between pb-4 mb-2">
            <div class="d-flex align-items-start">
                <div class="position-relative flex-shrink-0">
                    <img class="rounded-circle" src="~/img/avatars/37.png" width="100" alt="Annette Black">
                    <button class="btn btn-icon btn-light btn-xs rounded-circle shadow-sm position-absolute end-0 bottom-0" type="button" data-bs-toggle="tooltip" title="Change image"><i class="fi-pencil fs-xs"></i></button>
                </div>
                <div class="ps-3 ps-sm-4">
                    <h3 class="h5">Welcome @Context.Session.GetString("FirstName") !!!</h3>
                    <ul class="list-unstyled fs-sm mb-0">
                        <li class="d-flex text-nav text-break"><i class="fi-mail opacity-60 mt-1 me-2"></i><span>@User.Identity.Name</span></li>
                        @*<li class="d-flex text-nav text-break"><i class="fi-phone opacity-60 mt-1 me-2"></i><span></span></li>*@
                    </ul>
                </div>
            </div>
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
                <button type="submit" class="nav-link btn btn-link text-dark nav-link p-0 d-none d-md-block"><i class="fi-logout mt-n1 me-2"></i> Click here to Logout</button>
            </form>
        </div>
        <!-- Account menu--><a class="btn btn-outline-primary btn-lg rounded-pill w-100 d-md-none" href="#account-nav" data-bs-toggle="collapse"><i class="fi-align-justify me-2"></i>Account Menu</a>

                            <div class="collapse d-md-block" id="account-nav">
                                <partial name="_nav" />
                            </div>
        <!-- Basic info-->
        <p style="text-align:center;color:green;">@TempData["success"]</p>
        <form asp-controller="HRDashboard" asp-action="PostJob" method="post">
            <section class="card card-body border-0 shadow-sm p-4 mb-4" id="basic-info">

                <h2 class="h4 text-dark mb-4"><i class="fi-info-circle text-primary fs-5 mt-n1 me-2"></i>Basic info</h2>
                <div class="row mb-2">
                    <div class="col-sm-6 mb-3">
                        <div class="mb-3">
                            <label class="form-label" for="sc-title">Job Title <span class="text-danger">*</span></label>
                            <input class="form-control" type="text" id="sc-title" placeholder="Job Title" asp-for="JobTitle" required>
                        </div>
                    </div>

                    <div class="col-sm-6 mb-3">
                        <div class="mb-3">
                            <label class="form-label" for="sc-title">Job Code <span class="text-danger">*</span></label>
                            <input class="form-control" type="text" id="sc-title" placeholder="Job Code" asp-for="JobCode" value="" required>

                        </div>
                    </div>
                </div>

                <div class="row mb-2">
                    <div class="col-sm-6 mb-3">
                        <div class="mb-3">
                            <label class="form-label" for="sc-title">Location <span class="text-danger">*</span></label>
                            <input class="form-control" type="text" id="sc-title" placeholder="Location" asp-for="Location" value="" required>

                        </div>
                    </div>

                    <div class="col-sm-6 mb-3">
                        <div class="mb-3">
                            <label class="form-label" for="sc-title">Job Type <span class="text-danger">*</span></label>
                            <select class="form-control" asp-for="ContractType">
                                <option>Please select one</option>
                                <option>Contract</option>
                                <option>Full-Time</option>
                                <option>Part-time</option>
                                <option>Temporary</option>
                                <option>Freelancer</option>
                            </select>
                        </div>
                    </div>
                </div>
                <div class="row mb-2">

                    <div class="col-sm-6 mb-3">
                        <div class="mb-2">
                            <label class="form-label" for="sc-title">Travel Requirements <span class="text-danger">*</span></label>
                            <select class="form-control" asp-for="TravelRequirements">
                                <option>Please select one</option>
                                <option>Yes</option>
                                <option>No</option>

                            </select>
                        </div>
                    </div>
                    <div class="col-sm-6 mb-3">
                        <div class="mb-2">
                            <label class="form-label" for="sc-title">Department <span class="text-danger">*</span></label>
                            <select class="form-control" asp-for="Department">
                                <option>Please select one</option>
                                <option value="Admin & General Services">Admin & General Services</option>
                                <option value="Brand & Corporate Communication">Brand & Corporate Communication</option>
                                <option value="Customer Service">Customer Service</option>
                                <option value="Finance">Finance</option>
                                <option value="Human Capital Management">Human Capital Management</option>
                                <option value="Information Technology">Information Technology</option>
                                <option value="Internal Audit">Internal Audit</option>
                                <option value="Internal Control">Internal Control</option>
                                <option value="Legal & Compliance">Legal & Compliance</option>
                                <option value="Sales & Marketing">Sales & Marketing</option>
                                <option value="Strategy & Business Analysis">Strategy & Business Analysis</option>
                                <option value="Technical (Underwriting, Claims, Survey, Reinsurance)">Technical (Underwriting, Claims, Survey, Reinsurance)</option>
                            </select>
                        </div>
                    </div>
                </div>



                <div class="row mb-2">
                    <div class="col-sm-6 mb-3">
                        <div class="mb-2">
                            <label class="form-label" for="sc-title">Start Date<span class="text-danger">*</span></label>
                            <input class="form-control" type="date" asp-for="StartDate" id="sc-title" placeholder="Start Date" value="" required>

                        </div>
                    </div>
                    <div class="col-sm-6 mb-3">
                        <div class="mb-2">
                            <label class="form-label" for="sc-title">End Date<span class="text-danger">*</span></label>
                            <input class="form-control" type="date" asp-for="EndDate" id="sc-title" placeholder="EndDate" value="" required>

                        </div>
                    </div>
                </div>

                <div class="row mb-2">

                    <div class="col-sm-6 mb-3">
                        <div class="mb-3">
                            <label class="form-label" for="sc-title">Job Objectives <span class="text-danger">*</span></label>
                            <textarea class="form-control" rows="5" asp-for="JobObjectives" placeholder="Objectives"></textarea>
                        </div>
                    </div>


                    <div class="col-sm-6 mb-3">
                        <div class="mb-3">
                            <label class="form-label" for="sc-title">Relevant Requirements <span class="text-danger">*</span></label>
                            <textarea class="form-control" rows="5" asp-for="RelevantRequirement" placeholder="Job relevant requirements"></textarea>
                        </div>

                    </div>

                </div>


                <div class="row mb-2">

                    <div class="col-sm-6 mb-3">
                        <div class="mb-3">
                            <label class="form-label" for="sc-title">Behavioural Competencies <span class="text-danger">*</span></label>
                            <textarea class="form-control" rows="5" asp-for="BehaviouralCompetencies" placeholder="Behavioural Competencies "></textarea>
                        </div>
                    </div>


                    <div class="col-sm-6 mb-3">
                        <div class="mb-3">
                            <label class="form-label" for="sc-title">Core Responsibilities<span class="text-danger">*</span></label>
                            <textarea class="form-control" rows="5" asp-for="CoreResponisbilities" placeholder="Core Responsibilities"></textarea>
                        </div>

                    </div>

                </div>

                <div class="row mb-2">

                    <div class="col-sm-4 mb-3">
                        <div class="mb-3">
                            <label class="form-label" for="sc-title">Reports To <span class="text-danger">*</span></label>
                            <input class="form-control" asp-for="ReportsTo" placeholder="Reports To " />
                        </div>
                    </div>


                    <div class="col-sm-4 mb-3">
                        <div class="mb-3">
                            <label class="form-label" for="sc-title">Direct Reports<span class="text-danger">*</span></label>
                            <input class="form-control" asp-for="DirectReports" placeholder="Direct Reports" />
                        </div>

                    </div>
                    <div class="col-sm-4 mb-3">
                        <div class="mb-3">
                            <label class="form-label" for="sc-title">Education<span class="text-danger">*</span></label>
                            <input class="form-control" asp-for="Education" placeholder="Education" />
                        </div>

                    </div>

                </div>

                <div class="row mb-2">

                    <div class="col-sm-6 mb-3">
                        <div class="mb-3">
                            <label class="form-label" for="sc-title">Skills <span class="text-danger">*</span></label>
                            <textarea class="form-control" rows="5" asp-for="Skills" placeholder="Skills"></textarea>
                        </div>
                    </div>


                    <div class="col-sm-6 mb-3">
                        <div class="mb-3">
                            <label class="form-label" for="sc-title">Professional Qualification<span class="text-danger">*</span></label>
                            <textarea class="form-control" rows="5" asp-for="ProfQualitification" placeholder="Professional Qualification"></textarea>
                        </div>

                    </div>

                </div>


            </section>
            <!-- Price-->

            <div class="row pt-4 mt-2">
                <div class="col-lg-9 offset-lg-3">
                    <div class="d-flex align-items-center justify-content-between">
                        <button class="btn btn-primary btn-lg rounded-pill px-3 px-sm-4" type="submit">Submit</button>
                    </div>
                </div>
            </div>

        </form>

    </div>
</div>


<script src="~/vendor/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/vendor/simplebar/dist/simplebar.min.js"></script>
<script src="~/vendor/smooth-scroll/dist/smooth-scroll.polyfills.min.js"></script>
<script src="~/vendor/flatpickr/dist/flatpickr.min.js"></script>
<!-- Main theme script-->
<script src="~/js/theme.min.js"></script>
<script src="~/sweetalert2.min.js"></script>

<script src="~/sweetalert2.min.js"></script>

@if (TempData["success"] != null)
{
    <script type="text/javascript">
        Swal({
            type: 'success',
            title: 'Job Placement',
            html: 'Your job post has been submitted successfully.'

        })
    </script>
}
else if (TempData["error"] != null)
{
    <script type="text/javascript">
            Swal({
                type: 'error',
                title: 'Login',
                html: '@TempData["error"]'

            })
    </script>
}